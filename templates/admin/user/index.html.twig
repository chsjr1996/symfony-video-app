{% extends "admin/base.html.twig" %}

{% block mainadmin %}
    {{ include('_common/_partials/_errors.html.twig') }}

    <h2>{{ 'texts.admin.users.title'|trans({}, 'texts') }}</h2>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>{{ 'texts.admin.users.id'|trans({}, 'texts') }}</th>
                    <th>{{ 'texts.admin.users.name'|trans({}, 'texts') }}</th>
                    <th>{{ 'texts.admin.users.last_name'|trans({}, 'texts') }}</th>
                    <th>{{ 'texts.admin.users.email'|trans({}, 'texts') }}</th>
                    <th>{{ 'texts.admin.users.delete'|trans({}, 'texts') }}</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.name }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <form action="{{ path('admin_users_delete', {'user': user.id}) }}" method="POST" class="delete-form">
                                <input type="hidden" name="_method" value="DELETE" value="" />
                                <button type="submit" onclick="return confirm('{{ 'texts.admin.users.are_you_sure'|trans({}, 'texts') }}');">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
