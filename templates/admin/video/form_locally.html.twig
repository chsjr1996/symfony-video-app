{% extends "admin/base.html.twig" %}

{% block mainadmin %}
  <h2>{{ 'texts.admin.upload_video_local.title'|trans({}, 'texts') }}</h2>
  {{ form_errors(form.uploaded_video) }}

  {{ form_start(form) }}
      <div class="form-group">
          <div class="custom-file">
                  {{ form_widget(form.uploaded_video) }}
                  <label class="custom-file-label" for="customFile">{{ 'texts.admin.upload_video_local.choose_file'|trans({}, 'texts') }}</label>
          </div> 
      </div>
      <button type="submit" class="btn btn-primary">{{ 'texts.admin.upload_video_local.submit'|trans({}, 'texts') }}</button>
  {{ form_end(form) }}
{% endblock %}

