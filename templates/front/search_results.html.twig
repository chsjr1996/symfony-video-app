{% extends "base.html.twig" %}

{% block customstylesheets %}
    {{ parent() }}
    {% if app.user %}
        <link rel="stylesheet" href="{{ asset('assets/css/likes.css') }}"/>
    {% endif %}
{% endblock %}

{% block main %}
    <section class="jumbotron text-center">
        <div class="container">
            {% if videos %}
                <h1 class="jumbotron-heading">{{ 'texts.front.video_list.search_results'|trans({}, 'texts') }}</h1>
                {{ include("front/_partials/_sort.html.twig", {'query': query}) }}
            {% else %}
                <h1 class="jumbotron-heading">{{ 'texts.front.video_list.no_results'|trans({}, 'texts') }}</h1>
            {% endif %}
        </div>
    </section>
    {% if videos %}
        {{ include("front/_partials/_videos.html.twig", {'videos': videos}) }}
        {{ knp_pagination_render(videos) }}
    {% endif %}
{% endblock %}

{% block customjavascripts %}
    {{ parent() }}
    {% if app.user %}
        <script src="{{ asset('assets/js/likes.js') }}"></script>
    {% endif %}
{% endblock %}

